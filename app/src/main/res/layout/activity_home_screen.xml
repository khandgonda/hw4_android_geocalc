<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeScreen">
    <Button
        android:id="@+id/Calculate"
        android:layout_width="154dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="157dp"
        android:text="Calculate"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="122dp" />

    <Button
        android:id="@+id/Clear"
        android:layout_width="154dp"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/Calculate"
        android:layout_marginEnd="12dp"
        android:text="Clear"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="122dp" />

    <EditText
        android:id="@+id/LP1"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Calculate"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Latitude P1"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/LoP1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Clear"
        android:layout_alignTop="@+id/LP1"
        android:ems="10"
        android:hint="Longitude P1"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/LP2"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Calculate"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="Latitude P2"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/LoP2"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Clear"
        android:layout_alignTop="@+id/LP2"
        android:ems="10"
        android:hint="Longitude P2"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Calculate"
        android:layout_marginTop="250dp"
        android:text="Distance :" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Calculate"
        android:layout_marginTop="300dp"
        android:text="Bearing :" />

    <TextView
        android:id="@+id/Distance"
        android:layout_width="263dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginStart="144dp" />

    <TextView
        android:id="@+id/Bearing"
        android:layout_width="265dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/Distance"
        android:layout_alignTop="@+id/textView6" />

    <Button
        android:id="@+id/SettingsPressed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="Settings"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/dmetric"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Calculate"
        android:layout_marginBottom="86dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/bmetric"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dmetric"
        android:layout_toEndOf="@+id/SettingsPressed"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:visibility="invisible" />

</RelativeLayout>